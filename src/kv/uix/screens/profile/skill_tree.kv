<PerkBox>:
    canvas.before:
        Rectangle:
            size: self.width * 0.9, self.height * 0.9
            pos: self.width * 0.05, self.height * 0.05
            texture: Gradient.center_drop(self.width, self.height, self.color, self.color_fade, 10)
    Label:
        size_hint: None, None
        size: self.texture_size
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        text_size: root.width * 0.75, root.height * 0.75

        halign: 'center'
        valign: 'middle'

        font_size: '24sp'
        font_name: 'Precious'
        color: 0, 0, 0, 1
        text: root.text
    Image:
        source: 'icons/lock.png'
        size_hint: 0.25, 0.25
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        opacity: 1 if not root.active else 0
    Button:
        opacity: 0
        on_release: root.on_perk_info()