<CharEquipButton>:
    opacity: 0 if self.char == -1 else 1
    Image:
        id: char_preview
        source: root.image_source
        size_hint: 0.98, 0.98
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
    Image:
        source: 'preview_background.png'
        allow_stretch: True
        keep_ratio: False
    PPCHoverPathButton:
        on_release: root.on_char_equip()
        opacity: 0
        collision_source: 'buttons/default.collision.png'


<MissingEquip>:
    Image:
        source: 'screens/equip/missing.png'
        allow_stretch: True
        keep_ratio: False
    Label:
        text: "No Character Equipped"
        font_name: 'Gabriola'
        color: 0, 0, 0, 1
        font_size: root.width * 0.25
        canvas.before:
            PushMatrix
            Rotate:
                angle: -90
                origin: self.center
        canvas.after:
            PopMatrix


