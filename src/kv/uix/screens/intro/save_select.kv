<SaveSelect>:
    name: 'save_select'
    title_hidden: True
    home_hidden: True
    home_enabled: False
    Label:
        id: title
        text: 'Select Save'
        font_name: 'Precious'
        font_size: '60pt' #'fonts.main_title'
        size_hint: 0.75, 0.1
        pos_hint: {'center_x': 0.5, 'top': 0.9}
        color: 0, 0, 0, 1
        canvas:
            Color:
                rgba: 0, 0, 0, 1
            Line:
                width: 1
                points: self.x, self.y, self.right, self.y
    SaveSlot:
        id: save_slot_1
        size_hint: 0.7, 0.2
        pos_hint: {'center_x': 0.5, 'center_y': 0.625}
        title: 'Save Slot 1'
        on_release: root.load_save(1)
    PPCHoverPathButton:
        id: save_trash_1
        path: 'buttons/trash'
        size_hint: 0.05625, 0.0984375
        pos_hint: {'center_y': 0.625, 'x': 0.875}
        on_release: root.delete_save(1)
    SaveSlot:
        id: save_slot_2
        size_hint: 0.7, 0.2
        pos_hint: {'center_x': 0.5, 'center_y': 0.4}
        title: 'Save Slot 2'
        on_release: root.load_save(2)
    PPCHoverPathButton:
        id: save_trash_2
        path: 'buttons/trash'
        size_hint: 0.05625, 0.0984375
        pos_hint: {'center_y': 0.4, 'x': 0.875}
        on_release: root.delete_save(2)
    SaveSlot:
        id: save_slot_3
        size_hint: 0.7, 0.2
        pos_hint: {'center_x': 0.5, 'center_y': 0.175}
        title: 'Save Slot 3'
        on_release: root.load_save(3)
    PPCHoverPathButton:
        id: save_trash_3
        path: 'buttons/trash'
        size_hint: 0.05625, 0.0984375
        pos_hint: {'center_y': 0.175, 'x': 0.875}
        on_release: root.delete_save(3)

<GameInfoLabel@Label>:
    font_name: 'Gabriola'
    font_size: '25pt' # 'fonts.medium_body'

<SaveSlot>:
    path: 'buttons/save_slot'
    canvas:
        Color:
            rgba: 0, 0, 0, 1
        Line:
            width: 2
            points: self.x + self.width * 0.2, self.y + self.height * 0.1, self.x + self.width * 0.2, self.y + self.height * 0.9
    RelativeLayout:
        size: self.parent.size
        pos: self.parent.pos
        GameInfoLabel:
            text: root.title
            font_size: '40pt'
            size_hint: (None, 0.25) if version.text != '' else (None, 1)
            width: self.texture_size[0]
            color: 0, 0, 0, 1
            pos_hint: {'x': 0.025, 'center_y': 0.75}
        GameInfoLabel:
            id: version
            size_hint: None, 0.25
            width: self.texture_size[0]
            pos_hint: {'x': 0.025, 'center_y': 0.375}
            color: 0, 0, 0, 1
            opacity: 0 if self.text == '' else 1
