#:import PPCHoverPathButton kivy.uix.buttonversions.PPCHoverPathButton
#:import TypeFlag uix.screens.character_display.attributes.flags.TypeFlag
#:import ElementFlag uix.screens.character_display.attributes.flags.ElementFlag

<IntroSelect>:
    name: 'intro_select'
    title_hidden: True
    Label:
        id: instructions
        size_hint: 0.75, 0.2
        text_size: self.size
        pos_hint: {'top': 1, 'center_x': 0.5}
        text: 'Oh almighty ' + root.god_name + ', you have two adventurers interested in joining your fledgling family.\nYou only have the finances to support yourself and one adventurer.\nWhich do you choose?'
        halign: 'left'
        font_name: 'Gabriola'
        font_size: '30pt'
        color: 0, 0, 0, 1
    RelativeLayout:
        size_hint: 0.425, 0.61625
        pos_hint: {'x': 0.05, 'top': 0.725}
        HoverPathButton:
            path: 'buttons/character_selection'
            on_release: root.choose_character(0)
        Label:
            id: ais_label
            size_hint: 0.6, 0.138
            pos_hint: {'right': 1, 'y': 0.862}
            text: 'Ais Wallenstein'
            font_name: 'Precious'
            size: self.texture_size
            color: app.get_dkey('ss.ngal c')
            font_size: '50pt'
        Image:
            size_hint: 0.375, 0.345
            pos_hint: {'x': 0.125, 'top': 0.862}
            source: 'res/characters/a_whisper_of_wind_ais/a_whisper_of_wind_ais_full.png'
        ElementFlag:
            type: 'wind'
            size_hint: 0.0625, 0.245
            pos_hint: {'x': 0.0625, 'top': 0.879}
        TypeFlag:
            type: 'physical'
            size_hint: 0.282, 0.0899
            pos_hint: {'x': 0.0625, 'y': 0.862}
        Label:
            id: ais_description
            size_hint: 0.5, 0.345
            pos_hint: {'right': 1, 'top': 0.862}
            text_size: self.size
            text: 'Race: Human\nGender: Female\nAge: 20\n\nA young adventurer who loves slicing things and doesn\'t show much emotion.'
            color: 0, 0, 0, 1
            font_name: 'Gabriola'
            font_size: '24pt'
        Label:
            text: 'Total Stats'
            font_name: 'Precious'
            height: self.texture_size[1]
            color: 0, 0, 0, 1
            font_size: '30pt'
            size_hint: 0.5, 0.103
            pos_hint: {'top': 0.517}
        StatBox:
            font: 'Gabriola'
            color: 1, 1, 1, 1
            number_color: 0, 0, 0, 1
            size_hint: 0.4, 0.345
            pos_hint: {'x': 0.05, 'top': 0.414}
            health: 175
            mana: 60
            phy_attack: 15
            mag_attack: 10
            defense: 15
        Label:
            text: 'Total Abilities'
            font_name: 'Precious'
            height: self.texture_size[1]
            color: 0, 0, 0, 1
            font_size: '30pt'
            size_hint: 0.5, 0.103
            pos_hint: {'x': 0.5, 'top': 0.517}
        AbilityStatBox:
            font: 'Gabriola'
            color: 1, 1, 1, 1
            size_hint: 0.4, 0.345
            pos_hint: {'x': 0.55, 'top': 0.414}
            strength: 15
            strength_path: 'icons/I.png'
            magic: 10
            magic_path: 'icons/I.png'
            endurance: 15
            endurance_path: 'icons/I.png'
            agility: 10
            agility_path: 'icons/I.png'
            dexterity: 12
            dexterity_path: 'icons/I.png'

