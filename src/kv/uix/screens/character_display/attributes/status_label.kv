<SkillLabel>:
    Image:
        id: image
        source: 'screens/attributes/attribute_box.png'
        keep_ratio: False
        allow_stretch: True
    Label:
        id: title
        size_hint: None, None
        size: self.texture_size
        pos_hint: {'center_y': 0.8975, 'x': 0.025}
        markup: True
        font_size: root.height * 0.175
        font_name: 'Gabriola'
        color: 0, 0, 0, 1
        text: '[b]' + root.title + '[/b]'
    Label:
        id: body
        valign: 'top'
        halign: 'left'
        size_hint: 0.95, 0.73
        pos_hint: {'x': 0.025, 'y': 0.01}
        text_size: self.size
        font_size: root.height * 0.15
        color: 0, 0, 0, 1
        font_name: 'Gabriola'
        text: root.body


