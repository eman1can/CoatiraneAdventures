<CustomSlot>:
    AsyncImage:
        id: background
        source: 'buttons/slot_' + str(root.type) + '_background.png'
    AsyncImage:
        id: unlocked_overlay
        source: 'buttons/slot_unlocked_overlay.png'
        opacity: 0 if root.locked else 1
    Label:
        id: label_letter
        text: str(root.type).capitalize()[0]
        size_hint: None, None
        size: self.texture_size
        pos_hint: {'center_x': 0.5, 'top': 0.875}
        font_size: root.height * 0.6
        color: 0, 0, 0, 1
        font_name: 'Gabriola'
    Label:
        id: label_number
        text: '+' + str(root.value)
        font_size: root.height * 0.35
        size_hint: None, None
        size: self.texture_size
        pos_hint: {'center_x': 0.5, 'y': 0.15}
        color: 1,1,1, 1
        font_name: 'Gabriola'
    AsyncImage:
        id: hover_overlay
        source: 'buttons/slot_hover_overlay.png'
        opacity: 0 if root.disabled else 0 if not root.locked else 1 if root.hover else 0
    AsyncImage:
        id: disabled_overlay
        source: 'buttons/slot_disabled_overlay.png'
        opacity: 0 if not root.locked else 1 if root.disabled else 0
    PPCHoverPathButton:
        id: button
        collision_source: 'buttons/slot_collide.png'
        disabled: root.disabled
        opacity: 0
        on_release: root.dispatch('on_unlock')
#        on_hover_enter: root.hover = True
#        on_hover_exit: root.hover = False
