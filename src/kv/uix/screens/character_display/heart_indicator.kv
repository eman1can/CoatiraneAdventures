<HeartIndicator>:
    #Outline in BG
    Image:
        id: outline
        source: 'icons/heart_empty.png'
    StencilView:
        opacity: 1 if root.familiarity < 1 else 0
        size_hint: 1, root.familiarity
        Image:
            id: red
            source: 'icons/heart_red.png'
            size: outline.size
            pos: outline.pos
    StencilView:
        size_hint: 1, root.familiarity_gold
        Image:
            id: gold
            source: 'icons/heart_gold.png'
            size: outline.size
            pos: outline.pos
    PPCHoverPathButton:
        id: button
        opacity: 0
        layer: 1
        collision_source: 'icons/heart_empty.png'
        on_release: root.toggle_hint()
        on_enter: root.show_hint()
        on_exit: root.hide_hint()