<ImagePreview>:
    name: 'image_preview_unassigned' if root.char is None else 'image_preview_' + str(root.char.get_id())
    Image:
        id: background
        source: root.background_source
        allow_stretch: True
    Image:
        id: char_image
        source: '' if root.char is None else root.char.get_image('inspect')
        allow_stretch: True
    PPCHoverPathButton:
        id: back_button
        path: 'buttons/back'
        size_hint: app.get_dkey('bb s_h')
        pos_hint: app.get_dkey('bb p_h')
        on_release: root.on_back_press()