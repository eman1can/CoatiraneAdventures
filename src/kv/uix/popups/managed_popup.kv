<ManagedPopup>:
    auto_dismiss: False
    StencilView:
        Image:
            source: 'background.png'
            allow_stretch: True
            size_hint: None, None
            height: app.height * 0.9
            width: self.image_ratio * self.height
            pos: self.parent.x + root.width / 2 - self.width / 2, self.parent.y + root.height / 2 - self.height / 2
    FloatLayout:
        PPCHoverPathButton:
            id: close_button
            path: 'buttons/close'
            size_hint: None, None
            height: root.height * 0.15
            width: self.height
            pos_hint: {'top': 1, 'right': 1}
            on_release: root.goto_previous()