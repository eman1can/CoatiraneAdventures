<SlotConfirm>
    auto_dismiss: False
    background: 'sort_background.png'
    size_hint: 0.337, 0.6
    pos_hint: {'center_x': 0.7015, 'center_y': 0.45}
#    size_hint: 0.5, 0.889
#    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
    RelativeLayout:
        Label:
            id: label_large
            color: 0, 0, 0, 1
            font_name: 'Gabriola'
            text: root.text_main
            font_size: root.height * 0.2
            size_hint: 0.4, 0.25
            pos_hint: {'center_x': 0.5, 'center_y': 0.85}
        Label:
            id: label_small
            color: 0, 0, 0, 1
            font_name: 'Gabriola'
            text: root.text_update
            font_size: root.height * 0.1
            size_hint: 0.4, 0.25
            pos_hint: {'center_x': 0.5, 'center_y': 0.675}
        PPCHoverPathButton:
            id: cancel
            font_name: 'Gabriola'
            text: 'Cancel'
            path: 'buttons/long_stat'
            on_release: root.dismiss()
            font_size: self.height * 0.6
            size_hint: 0.35, 0.132
            pos_hint: {'center_x': 0.3, 'center_y': 0.2}
        PPCHoverPathButton:
            id: confirm
            font_name: 'Gabriola'
            text: 'Confirm'
            path: 'buttons/long_stat'
            on_release: root.dispatch('on_confirm')
            font_size: self.height * 0.6
            size_hint: 0.35, 0.132
            pos_hint: {'center_x': 0.7, 'center_y': 0.2}