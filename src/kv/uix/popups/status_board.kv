            font_name: 'Gabriola'
            text: 'Choose a new ability'
        GridLayout:
            rows: 3
            id: content
            size_hint: 0.8, 0.6
            spacing: root.height * 0.05
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        PPCHoverPathButton:
            id: cancel
            font_name: 'Gabriola'
            text: 'Later'
            path: 'buttons/long_stat'
            on_release: root.dismiss()
            font_size: root.height * 0.075
            size_hint: 0.40, 0.15
            pos_hint: {'center_x': 0.5, 'center_y': 0.075}


