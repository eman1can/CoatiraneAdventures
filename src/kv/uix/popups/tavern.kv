<Confirm>:
    auto_dismiss: False
    background: 'sort_background.png'
    size_hint: 0.45, 0.8
    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
    border: [0, 0, 0, 0]
    RelativeLayout:
        Label:
            id: title
            font_size: root.height * 0.15
            color: 0, 0, 0, 1
            size_hint: 1, 0.2
            pos_hint: {'center_x': 0.5, 'top': 1}
            font_name: 'Gabriola.ttf'
            text: 'Are you sure?'
        PPCHoverPathButton:
            id: cancel
            font_name: 'Gabriola.ttf'
            text: 'Cancel'
            path: 'buttons/long_stat'
            on_release: root.manager.goto_previous()
            font_size: root.height * 0.075
            size_hint: 0.40, 0.15
            pos_hint: {'center_x': 0.25, 'center_y': 0.075}
        PPCHoverPathButton:
            id: confirm
            font_name: 'Gabriola.ttf'
            text: 'Confirm'
            path: 'buttons/long_stat'
            on_release: root.confirm()
            font_size: root.height * 0.075
            size_hint: 0.40, 0.15
            pos_hint: {'center_x': 0.75, 'center_y': 0.075}

