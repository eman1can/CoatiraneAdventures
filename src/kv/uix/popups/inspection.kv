<InspectionItem>:
    Image:
        size_hint: 0.25, 1
        source: root.icon_source
        pos_hint: {'x': 0 if not root.indent else 0.05}
    Label:
        size_hint: 0.75 if not root.indent else 0.7, 1
        pos_hint: {'x': 0.25 if not root.indent else 0.3}
        font_name: 'Gabriola'
        color: 0, 0, 0, 1
        font_size: self.height * 0.7
        text: root.text

<Inspection>:
    Label:
        size_hint: 1, 0.05
        pos_hint: {'top': 1, 'center_x': 0.5}
        font_name: 'Gabriola'
        color: 0, 0, 0, 1
        font_size: self.height * 0.7
        text: 'Status Information'
    Label:
        size_hint: 1, 0.05
        pos_hint: {'top': 0.95, 'center_x': 0.5}
        font_name: 'Gabriola'
        color: 0, 0, 0, 1
        font_size: self.height * 0.7
        text: root.name
    Label:
        size_hint: 1, 0.05
        pos_hint: {'top': 0.9, 'center_x': 0.5}
        font_name: 'Gabriola'
        color: 0, 0, 0, 1
        font_size: self.height * 0.7
        text: 'HP: ' + str(int(root.health)) + ' / ' + str(int(root.max_health))
    Label:
        size_hint: 1, 0.05
        pos_hint: {'top': 0.85, 'center_x': 0.5}
        font_name: 'Gabriola'
        color: 0, 0, 0, 1
        font_size: self.height * 0.7
        text: 'Buffs / Debuffs'
    Image:
        size_hint: 0.1, 0.177
        pos_hint: {'top': 0.95, 'x': 0.05}
        source: root.background_source
        allow_stretch: True
    Image:
        size_hint: 0.1, 0.177
        pos_hint: {'top': 0.95, 'x': 0.05}
        source: root.portrait_source
        allow_stretch: True
    ElementFlag:
        size_hint: 0.025, 0.1
        pos_hint: {'top': 0.783, 'x': 0.05}
        type: root.element_source
    ElementFlag:
        size_hint: 0.025, 0.1
        pos_hint: {'top': 0.783, 'right': 0.15}
        opacity: 0 if root.sub_element_source == '' else 1
        type: root.sub_element_source
    Label:
        size_hint: 1, 0.2
        pos_hint: {'top': 0.8, 'center_x': 0.5}
        font_name: 'Gabriola'
        color: 0, 0, 0, 1
        font_size: self.height * 0.7
        text: 'None'
        opacity: 1 if len(effect_list.data) == 0 else 0
    RecycleView:
        id: effect_list
        opacity: 0 if len(self.data) == 0 else 1
        size_hint: 0.75, 0.75
        pos_hint: {'top': 0.8, 'center_x': 0.5}
        viewclass: 'InspectionItem'
        RecycleBoxLayout:
            default_size: None, root.height * 0.05
            default_size_hint: 1, None
            size_hint_y: None
            height: self.minimum_height
            orientation: 'vertical'